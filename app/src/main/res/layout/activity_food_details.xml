<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/courgette"
        android:text="List of Foods Expiring Today"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"


        />

    <ListView
        android:id="@+id/expiring_foods"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/no_foods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Have No Foods Expiring Today!!"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/lemonada"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/go_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_arrow_back"
        android:layout_weight="1"


        />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
    <Button
        android:id="@+id/view_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:text="View ALl Foods" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_baseline_add_24"


        />



    </LinearLayout>

</LinearLayout>