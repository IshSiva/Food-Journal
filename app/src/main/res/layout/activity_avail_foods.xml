<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AvailFoods">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="List of Available Foods"
        android:fontFamily="@font/courgette"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"


        />

    <ListView
        android:id="@+id/avail_foods"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/no_avail_foods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Have No Foods in the fridge!!"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/lemonada"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_home_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_arrow_back"


        />

</LinearLayout>